mixin chartBlock(id)
	div(data-chart=id style="height: 250px")

//====mixin==========
//===========HTML====

div.page-projects-index(style="display: none")
	.row
		.col-12
			.card.my-2
				.card-body
					.head.d-flex.justify-content-between
						h4.card-title
							span(data-i18n="title_projects") Projects
						.d-flex.flex-column.align-items-end
							a#btnExportProjects.link-share(href="javascript:;")
								span Export CSV
								span.ion-archive.ml-2
							a#btnSetAssociated.text-success.link-share(href="javascript:;")
								span Associate Projects
								span.ion-link.ml-2.d-none.d-sm-inline
					h6.card-subtitle.text-muted.mt-2(data-i18n="title_projects_tip")
						| (click item in chart for details)
					.card-text
						+chartBlock("projects")
